# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/annapurna
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=annapurna
DATABASE_USER=user
DATABASE_PASSWORD=password

# LLM API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
API_VERSION=v1

# Scraping Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; AnnapurnaBot/1.0)
SCRAPER_RATE_LIMIT=10  # requests per minute

# LLM Processing
LLM_BATCH_SIZE=10
LLM_TIMEOUT=30
AUTO_TAG_CONFIDENCE_THRESHOLD=0.7

# Duplicate Detection
SIMILARITY_TITLE_THRESHOLD=0.85
SIMILARITY_INGREDIENT_THRESHOLD=0.70
SIMILARITY_EMBEDDING_THRESHOLD=0.90
